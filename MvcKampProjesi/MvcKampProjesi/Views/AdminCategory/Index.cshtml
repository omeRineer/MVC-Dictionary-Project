@using Entities.Concrete
@model List<Category>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<table class="table table-bordered" style="margin-left:20px">
    <thead>
        <a href="/AdminCategory/AddCategory" type="button" class="btn btn-success" style="margin:20px;">Yeni Kategori</a>
        <tr>
            <th>#</th>
            <th>Kategori</th>
            <th>Açıklama</th>
            <th>Sil</th>
            <th>Güncelle</th>
            <th>Başlıklar</th>
        </tr>
    </thead>
    <tbody>
        @foreach (Category category in Model)
        {
            <tr>
                <th>@category.CategoryId</th>
                <td>@category.CategoryName</td>
                <td>@category.CategoryDescription</td>
                <td><a href="/AdminCategory/DeleteCategory/@category.CategoryId" type="button" class="btn btn-danger">Sil</a></td>
                <td><a href="/AdminCategory/UpdateCategory/@category.CategoryId" type="button" class="btn btn-warning">Güncelle</a></td>
                <td><button class="btn btn-info">Başlıklar</button></td>
            </tr>
        }
    </tbody>

</table>


